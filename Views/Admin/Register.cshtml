@{
    ViewData["Title"] = "Register";
}

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model PhotoForum.Models.ViewModel.AdminViewModels.RegisterViewModel

<style>
	body {
		background-color: #000; /* Black background */
		font-family: 'Roboto', sans-serif; /* Poppins font */
		color: #fff; /* White text color */
	}

	.centered-form {
		padding: 20px;
		background-color: #333; /* Dark grey background */
		border-radius: 8px;
		box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
	}

	h3 {
		margin-top:5vh;
		text-align: left;
		color: #fff;
	}

	p {
		text-align: center;
		color: #fff;
	}

	hr {
		border: 1px solid #f1f1f1;
		margin-bottom: 25px;

	}

	.form-group {
		width:100%;
		margin-bottom: 15px;
	}

		.form-group label {
			display: block;
			margin-bottom: 5px;
			font-weight: bold;
			color: #fff;
		}

	 .form-control {
		width: 100%;
		height:5vh;
		padding: 10px;
		border-radius: 4px;
		border: 1px solid #777;
		background-color: white;
		color: black;
		font-family: 'Poppins', sans-serif;
		font-size:large;
	} 

		.form-control:focus {
			border-color: #007bff;
			box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(0, 123, 255, 0.6);
		}

	.text-danger {
		color: #dc3545;
		font-size: 14px;
	}

	.registerbtn {

		color:white;
		background-color:darkgray;
		padding: 10px; /* Smaller padding */
	    height:5vh;
		border: none;
		border-radius: 4px;
		font-size: 16px; /* Smaller font size */
		cursor: pointer;
		transition: background-color 0.3s;
	}

	.container p {
		color: #fff; /* Ensuring text is visible on dark background */
		text-align: center; /* Centering the text */
	}

	a {
		color: dodgerblue;
		text-decoration: none; /* Optional: removes underline */
	}

		@* a:hover {
			text-decoration: underline; /* Optional: adds underline on hover */
		} *@

	@* .signin {
		margin-top: 20px; /* Space above the sign-in prompt */
	} *@
</style>

<form style="margin-left:5vh" asp-controller="Admin" asp-action="Register" method="post">
	<div>
		<h3>Register an admin</h3>
		<hr>
		<div style="display:flex;">
			<div style="width:20%">
				<div class="form-group">
					<label asp-for="Username"></label>
					<input type="text" asp-for="Username" class="form-control" />
					<span asp-validation-for="Username" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Password"></label>
					<input type="password" asp-for="Password" class="form-control" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="ConfirmPassword">Confirm Password</label>
					<input type="password" asp-for="ConfirmPassword" class="form-control" />
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>
				<div class="form-group"> 
					<label asp-for="Email"></label>
					<input type="text" asp-for="Email" class="form-control" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
			</div>
			<div style="margin-left:5vh; width:20%">

				<div class="form-group">
					<label asp-for="FirstName">First Name</label>
					<input type="text" asp-for="FirstName" class="form-control" />
				</div>
				<div class="form-group">
					<label asp-for="LastName">Last Name</label>
					<input type="text" asp-for="LastName" class="form-control" />
				</div>
						<div class="form-group">
					<label asp-for="LastName">Phone number</label>
					<input type="text" asp-for="PhoneNumber" class="form-control" />
				</div>
				<button type="submit" style="margin-top:3vh; width:100%" class="registerbtn">Register</button>
			</div>
		</div>
	</div>
</form>

