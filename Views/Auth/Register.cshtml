@{
    ViewData["Title"] = "Register";
}

@model PhotoForum.Models.ViewModel.UserViewModels.RegisterViewModel

<style>
	body {
		background-color: #000; /* Black background */
		font-family: 'Poppins', sans-serif; /* Poppins font */
		color: #fff; /* White text color */
	}

	.photo-wrapper{
		width: 156px; 
		height: 156px;
		border-radius: 50%;
		display: flex;
		justify-content: center;
		align-items: center;
		background: linear-gradient(45deg, #007bff, #ff2d55);
		padding: 3px; /* Adjust the border thickness */
		margin: 20px auto;
	}

	.photo{
		width: 150px; /* Adjust to actual image size */
		height: 150px;
		border-radius: 50%;
		display: block;
		object-fit: cover;
	}

	.gradient-text {
		font-size: 4em; /* Adjust the size as needed */
		font-family: 'Poppins', sans-serif; /* Consistent font style */
		background: linear-gradient(45deg, #007bff, #ff2d55);
		-webkit-background-clip: text;
		background-clip: text;
		color: transparent; /* Makes the text take the background color */
		text-align: center;
	}

	.centered-form {
		max-width: 400px;
		margin: 0 auto;
		padding: 20px;
		background-color: #333; /* Dark grey background */
		border-radius: 8px;
		box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
	}

	h1 {
		text-align: center;
		color: #fff;
	}

	p {
		text-align: center;
		color: #fff;
	}

	hr {
		border: 1px solid #f1f1f1;
		margin-bottom: 25px;
	}

	.form-group {
		margin-bottom: 15px;
	}

		.form-group label {
			display: block;
			margin-bottom: 5px;
			font-weight: bold;
			color: #fff;
		}

	/* .form-control {
		width: 100%;
		padding: 10px;
		border-radius: 4px;
		border: 1px solid #777;
		background-color: #555;
		color: #fff;
		font-family: 'Poppins', sans-serif;
	} */

		.form-control:focus {
			border-color: #007bff;
			box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(0, 123, 255, 0.6);
		}

	.text-danger {
		color: #dc3545;
		font-size: 14px;
	}

	.registerbtn {
		background-image: linear-gradient(45deg, #007bff, #ff2d55);
		color: white;
		padding: 10px 15px; /* Smaller padding */
		border: none;
		border-radius: 4px;
		font-size: 16px; /* Smaller font size */
		cursor: pointer;
		transition: background-color 0.3s;
		display: block; /* To use margin auto for centering */
		width: 50%; /* Smaller width */
		margin: 10px auto; /* Centering the button */
	}

		.registerbtn:hover {
			background-image: linear-gradient(45deg, #0056b3, #e23360);
		}

	.container p {
		color: #fff; /* Ensuring text is visible on dark background */
		text-align: center; /* Centering the text */
	}

	a {
		color: dodgerblue;
		text-decoration: none; /* Optional: removes underline */
	}

		@* a:hover {
			text-decoration: underline; /* Optional: adds underline on hover */
		} *@

	@* .signin {
		margin-top: 20px; /* Space above the sign-in prompt */
	} *@
</style>
<div class="photo-wrapper">
	<img src="~/images/retro-camera-logo.jpg" alt="Profile Photo" class="photo">
</div>
<form asp-controller="Auth" asp-action="Register" method="post" class="centered-form">
	<div >
		<h1 class="gradient-text">Register</h1>
		<p>Please fill in this form to create an account.</p>
		<hr>
		<div class="form-group">
			<label asp-for="Username"></label>
			<input type="text" asp-for="Username" class="form-control" />
			<span asp-validation-for="Username" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Password"></label>
			<input type="password" asp-for="Password" class="form-control" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="ConfirmPassword">Confirm Password</label>
			<input type="password" asp-for="ConfirmPassword" class="form-control" />
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Email"></label>
			<input type="text" asp-for="Email" class="form-control" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="FirstName">First Name</label>
			<input type="text" asp-for="FirstName" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="LastName">Last Name</label>
			<input type="text" asp-for="LastName" class="form-control" />
		</div>
		<p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
		<button type="submit" class="registerbtn">Register</button>
	</div>

	<div class="container signin">
		<p>Already have an account? <a asp-controller="Auth" asp-action="Login">Sign in</a>.</p>
	</div>
</form>

