@model PhotoForum.Models.Post
@{
    ViewData["Title"] = "Post Details";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #000; /* Change background color to black */
        color: #fff; /* Change text color to white */
        margin: 0;
        padding: 0;
    }

    .post-container {
        max-width: 600px;
        margin: 20px auto;
        background-color: #333; /* Change background color of the post container to grey */
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .post-header {
        display: flex;
        align-items: center;
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

    .creator-photo {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 10px;
    }

    .creator-info {
        font-weight: bold;
        flex-grow: 1;
    }

    .post-image {
        width: 100%;
        max-height: 400px;
        object-fit: cover;
    }

    .interaction-bar {
        display: flex;
        align-items: center;
        padding: 10px;
    }

    .like-btn {
        font-size: 20px;
        margin-right: 10px;
        cursor: pointer;
    }

    .likes {
        font-size: 18px;
        font-weight: bold;
        flex-grow: 1;
    }

    .post-content {
        padding: 20px;
        font-size: 16px;
    }

    .comments-section {
        border-top: 1px solid #ddd;
    }

    .comment {
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

        .comment strong {
            font-weight: bold;
        }

    .add-comment-form {
        display: flex;
        align-items: center;
        padding: 10px;
    }

    .comment-input {
        flex-grow: 1;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 16px;
    }

    .btn-comment {
        background-color: #007bff; /* Change button color to Instagram blue */
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
       
    }

    .btn-comment {
        width: 20%; /* Smaller width */
        padding: 10px 15px; /* Adjusted padding for a smaller button */
        margin-left: 10px;
        /* Center the button */
        display: block; /* Ensure the button respects the width and margin */
        border: none;
        border-radius: 4px;
        background-image: linear-gradient(45deg, #007bff, #ff2d55);
        color: white;
        font-size: 16px; /* Adjusted font size */
        cursor: pointer;
        transition: background-color 0.3s;
        font-family: 'Poppins', sans-serif;
    }

        .btn-comment:hover {
            background-image: linear-gradient(45deg, #0056b3, #e23360);
        }
</style>

<div class="post-container">
    <div class="post-header">
        <img src="@Model.PhotoUrl" alt="Creator Photo" class="creator-photo" />
        <div class="creator-info">@Model.Creator.Username</div>
    </div>
    <img src="@Model.PhotoUrl" alt="Photo" class="post-image" />
    <div class="interaction-bar">
        <div class="like-btn">&#x2764;</div>
        <div class="likes">@Model.LikesCount</div>
    </div>
    <div class="post-content">
        @Model.Content
    </div>
    <div class="comments-section">
        @foreach (var comment in Model.Comments)
        {
            <div class="comment">
                <strong>@comment.User.Username:</strong>
                @comment.Content
            </div>
        }
        <form method="post" action="/Post/AddComment" class="add-comment-form">
            <input type="hidden" name="postId" value="@Model.Id" />
            <input type="text" name="commentText" pattern="\S" title="Please enter a non-empty value" placeholder="Add a comment..." class="comment-input" required>
            <button type="submit" class="btn-comment">Post</button>           
        </form>
    </div>
</div>
