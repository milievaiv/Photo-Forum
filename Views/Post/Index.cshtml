@model PhotoForum.Models.Post
@{
    ViewData["Title"] = "Post Details";
}

<style>
    /* Custom styling for the like button */
    .like-btn {
        display: inline-block;
        width: 50px;
        height: 50px;
        background-color: transparent;
        border: none;
        cursor: pointer;
        appearance: none; /* Remove default styles */
    }

        /* Style the like button as an empty heart */
        .like-btn::before {
            content: '\2661'; /* Unicode character for an empty heart */
            font-size: 40px;
            color: white; /* Set the color for the empty heart */
        }

        /* When the checkbox is checked, change the content to a filled heart */
        .like-btn:checked::before {
            content: '\2665'; /* Unicode character for a filled heart */
            color: red; /* Set the color for the filled heart */
        }

        /* Remove extra space around the checkbox */
        .like-btn:focus {
            outline: none;
        }
</style>

<div style="display: flex; justify-content: center; margin-right: 20%; margin-top: 2%;">
    <div style="margin-top: 5%">
        <form method="post" action="/Post/AddComment" oninput="addCommentBtn.disabled = !commentInput.value.trim()">
            <input type="hidden" name="postId" value="@Model.Id" />
            <input type="text" name="commentText" id="commentInput" placeholder="Add a Comment">
            <button type="submit" class="btn btn-primary" id="addCommentBtn" formnovalidate>Add Comment</button>
        </form>
        <p>Comments: @Model.Comments.Count</p>

        @foreach (var comment in Model.Comments)
        {
            <div>
                <p>@comment.User.Username: @comment.Content</p>
            </div>
        }
    </div>

    <div style="max-width: 55%; max-height: 55%; margin-left: 10px;">
        <img src="@Model.PhotoUrl" alt="Photo" style="width: 100%; height: 100%;" />
    </div>

    <p style="margin-left: 10px">Creator: @Model.Creator?.Username</p>

    <div style="margin-left: 10px; margin-top: 15%">
        <form method="post" action="/Post/LikePost">
            <input type="hidden" name="postId" value="@Model.Id" />
            <input type="checkbox" id="likeCheckbox" class="like-btn">
            <label for="likeCheckbox"></label>
            <p>Likes: @Model.Likes</p>
        </form>
    </div>
</div>
